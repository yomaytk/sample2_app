
<%= form_for(@user, url:yield(:post_url_text)) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :name %>
	<%= f.text_field :name, class: 'form-control' %>
	
	<%= f.label :ID %>
	<%= f.text_field :id_number, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation, class: 'form-control' %>
	
	<div id="notification_box">
		<%= f.label :follower_notification_flag, class: "checkbox inline" do %>
			<%= f.check_box :follower_notification_flag %>
			<span>Follower notification by email</span>
		<% end %>
	</div>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
